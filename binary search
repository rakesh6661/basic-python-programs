def binary_search(arr,target):
    lb=0
    ub=len(arr)-1
    while lb<=ub:
        mid=lb+(ub-lb)//2 
        if arr[mid]==target:
            print(f"Element found at index {mid}")
            return mid
        elif arr[mid]<target:
            lb=mid+1
        else:
            ub=mid-1
    
    print("Element not found")
    return -1

arr=[10,20,30,40]
target=int(input("Enter the element to search:"))
result=binary_search(arr, target)
